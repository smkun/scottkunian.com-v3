rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      // For now, any authenticated user is admin
      // TODO: Implement custom claims with request.auth.token.admin == true
      return request.auth != null;
    }

    // Images folder - admin upload, public read
    match /images/{allPaths=**} {
      allow read: if true; // Public read access for all images
      allow write: if isAdmin() &&
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('image/.*'); // Only images
    }

    // Private admin files
    match /admin/{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // Backup and export files
    match /backups/{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}